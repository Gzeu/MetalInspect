<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme overrides -->
    <style name="Theme.MetalInspect" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/accent_orange_light</item>
        <item name="colorSecondaryVariant">@color/accent_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar for dark theme -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    
    <!-- Text styles for dark theme -->
    <style name="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextStyle.Subtitle">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
    
    <style name="TextStyle.Body">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <style name="TextStyle.Caption">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>
</resources>